{
  "manifest_version": 2,
  "name": "Recent Tabs",
  "version": "2.3.2",
  "description": "Recent Tabs",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content-script.js"
      ],
      "css": [
        "css/content-css.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "commands": {
    "toggle-recent-tabs": {
      "suggested_key": {
        "default": "Ctrl+Shift+K"
      },
      "description": "toggle recent tabs"
    },
    "to-left": {
      "suggested_key": {
        "default": "Ctrl+J",
        "windows": "Ctrl+J",
        "mac": "Command+J",
        "chromeos": "Ctrl+J",
        "linux": "Ctrl+J"
      },
      "description": "to left"
    },
    "to-right": {
      "suggested_key": {
        "default": "Ctrl+K",
        "windows": "Ctrl+K",
        "mac": "Command+K",
        "chromeos": "Ctrl+K",
        "linux": "Ctrl+K"
      },
      "description": "to right"
    }
  },
  "permissions": [
    "tabs",
    "activeTab"
  ]
}
