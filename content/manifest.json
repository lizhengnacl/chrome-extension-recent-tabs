{
  // 清单文件的版本，这个必须写，而且必须是2
  "manifest_version": 2,
  // 插件的名称
  "name": "Tabs",
  // 插件的版本
  "version": "0.0.1",
  // 插件描述
  "description": "Tabs",
  // 图标，一般偷懒全部用一个尺寸的也没问题
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "homepage_url": "",
  // 权限申请
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/content-script.js"
      ],
      "css": [
        "css/content-css.css"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "commands": {
    "save": {
      "suggested_key": {
        "default": "Ctrl+E"
      },
      "description": "trigger"
    }
  }
}
